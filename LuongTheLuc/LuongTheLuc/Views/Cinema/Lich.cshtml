@model IEnumerable<LuongTheLuc.Models.LichChieu>

@{
    ViewBag.Title = "Lich";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lịch chiếu</h2>


<table style="margin-top:30px" class="table table-hover">
    <tr>
        <th>
            Mã lịch
        </th>
        <th>
            Mã phim
        </th>
        <th>
            Ngày
        </th>
        <th>
            Giờ
        </th>
        <th>
            Giá
        </th>
        <th>
            Số lượng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.malich)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maphim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soluong)
            </td>
            <td>
                @if (item.soluong == 0)
                {
                    @Html.Label("Hết vé")
                }
                else
                {
                    @Html.ActionLink("Đặt vé", "ThemGioHang", "GioHang", new { id = item.malich.ToString().Trim(), @strURL = Request.Url.ToString() }, new { @class = "btn btn-success" })
                }
            </td>
        </tr>
    }

</table>
